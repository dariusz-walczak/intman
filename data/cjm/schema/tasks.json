{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "set id": {
            "type": "string",
            "regex": "[a-f0-9]{32}"
        },
        "author": {
            "type": "string"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "idx": {
                        "type": "integer"
                    },
                    "key": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "summary": {
                        "type": "string"
                    },
                    "story points": {
                        "anyOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    },
                    "links": {
                        "type": "object",
                        "properties": {
                            "related": {
                                "type": "array",
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "integer"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "anyOf": [
                    {
                        "required": [
                            "idx",
                            "title",
                            "summary",
                            "story points"
                        ]
                    },
                    {
                        "required": [
                            "key",
                            "title",
                            "summary",
                            "story points"
                        ]
                    }
                ]
            },
            "required": [
                "key",
                "summary",
                "story points"
            ]

        }
    },
    "required": [
        "set id",
        "author",
        "date",
        "tasks"
    ]
}
